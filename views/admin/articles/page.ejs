<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs')%>

<body>
  <div class="container">
    <% result.articles.rows.forEach(article => { %>
        <div class="card" style="margin: 30px 0 15px 0">
            <div class="card-header">
            <h2><%= article.title %></h2>
        </div>
      <div class="card-body">
            <a href="/<%= article.slug %> " class="btn btn-success">read article</a>
      </div>
      <br />
    </div>
    <% }) %>
    <div class="row">
        <div class="col col-12">

            <% if(result.page > 2) {%>
                <a style="float:left" class="btn btn-primary" href="/articles/page/<%= result.page - 1 %>"> < Prev</a>
            <% } else if(result.page == 2) { %>
                <a style="float:left" class="btn btn-primary" href="/">< Prev</a>
            <% } %>


            <% if(result.next)  {%>
                <a style="float:right" class="btn btn-primary"  href="/articles/page/<%= result.page + 1 %>">Next ></a>
            <% } %>
        </div>
    </div>
  </div>
</body>

