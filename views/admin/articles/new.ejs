<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>New Article</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/save">
                <input autocomplete="false" class="form-control" type="text" name="title" placeholder="Article title:"><br>
                <textarea name="body" class="form-control" placeholder="Write here..." id="article"></textarea>
                <button class="btn btn-success">Register</button>
            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article"
    })
</script>