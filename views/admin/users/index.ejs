<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container mt-4">
    <h2>Users</h2>
    <a class="btn btn-success" href="/admin/users/create">Create a new user</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <th><%= user.id %></th>
                <th><%= user.email %></th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

